<div class="container-fluid hero">
    <div class="hero-overlay"></div>
    <h1>Wing Spot Fanatics</h1>
</div>

<main class="mt-4">
    <div style="width: 300px;">
        <div class="mx-auto" style="width: 200px;">
            <div class="container">
                <div class="card" style="width: 25rem;">
                    <img src="{{users.image}}" />
                    <div class="card-body">
                        <h3>{{users.name}}</h3>
                        <h4>{{users.headline}}</43>
                            <h3>{{users.location}}</h3>
                           
                    </div>
                    <ul class="list-group list-group-flush">
                        <h3>{{users.name}}'s Favorite Wing Spots</h3>
                        {{#each users.wingspots}}
                        <a href="{{../users/id}}/wingspots/{{id}}">
                            <h3>{{name}}</h3>
                        </a>
                        {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="row m-5">
        <a href="{{users._id}}/edit"><button type="submit" class="btn btn-dark">Update User</button></a>
        <form action="/users/{{users._id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-dark">Delete User</button>
        </form>
        <a href="{{users._id}}/wingspots/new"><button class="btn btn-dark">Create New Wing Spot</button></a>
    </div>
</main>