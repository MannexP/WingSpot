<main>

    <h2>Hello {{users.name}}!

    </h2>


    <div class="users-container-show">
        <h2 id="users-name">


        </h2>

        <img src="{{users.image}}" />

        <br>
        <h5>{{users.headline}}</h5>
        <p>

            {{users.location}}

        </p>
        <h3>WingSpots</h3>
        {{#each users.wingspots}}
        <a href="/:id/wingspots/{{id}}">
            <h3>{{name}}</h3>
        </a>
        {{/each}}

        <a href="{{users._id}}/edit"><button type="submit">Update User</button></a>

        <form action="/users/{{users._id}}?_method=DELETE" method="POST">
            <button type="submit">Delete This User</button>
        </form>
         <a href='/wingspots/new'><button type="submit">Create New Wing Spot</button></a>
        </form>
    </div>


</main>