<main class="mt-4">
    <div class="container" id="users" style="width: 300px;" >
        <div class="mx-auto"  style="width: 200px;">
            <div class="container">
                <div class="card" style="width: 25rem;">
                    <img src="{{users.image}}" />
                    <div class="card-body">
                        <h3>{{users.name}}</h3>
                        <h4>{{users.headline}}</43>
                            <h3>{{users.location}}</h3>
                    </div>
                    <ul class="list-group list-group-flush">
                        <h3>{{users.name}}'s Favorite Wing Spots</h3>
                        {{#each users.wingspots}}
                        <a href="{{../users/id}}/wingspots/{{id}}">
                            <h3>{{name}}</h3>
                        </a>
                        {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>